<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.egor.tcpdatatransfer2.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <Button
        android:text="@string/SendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/SendTextButton"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/ViewFileNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewFileNamesButton"
        android:layout_marginEnd="46dp"
        android:layout_alignBaseline="@+id/SendTextButton"
        android:layout_alignBottom="@+id/SendTextButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="@string/SynchronizeFolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/SendFileButton"
        android:layout_alignStart="@+id/ViewFileNamesButton"
        android:id="@+id/SynchronizeFolderButton"
        android:layout_alignEnd="@+id/ViewFileNamesButton"
        android:layout_alignTop="@+id/SendFileButton" />

    <Button
        android:text="@string/SendFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="53dp"
        android:id="@+id/SendFileButton"
        android:layout_below="@+id/SendTextButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/SendTextButton" />

    <Button
        android:text="Temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:id="@+id/Temp"
        android:layout_below="@+id/SendFileButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/SendFileButton" />

</RelativeLayout>
